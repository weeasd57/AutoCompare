{
    "extends": [
        "next/core-web-vitals",
        "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
        "security"
    ],
    "rules": {
        "security/detect-object-injection": "off",
        "jsx-a11y/anchor-is-valid": [
            "error",
            {
                "components": [
                    "Link"
                ],
                "specialLink": [
                    "hrefLeft",
                    "hrefRight"
                ],
                "aspects": [
                    "invalidHref",
                    "preferButton"
                ]
            }
        ]
    }
}